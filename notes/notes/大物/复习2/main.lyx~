\begin_inset Formula $k=3$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
跃迁时: 
\begin_inset Formula $h\nu=E_{n}-E_{k},n>k.$
\end_inset


\end_layout

\begin_layout Standard
3.德布罗意波 
\end_layout

\begin_layout Itemize
实物粒子具有波动性: 
\begin_inset Formula $\eqs=mc^{2}=h\nu,\red{\vec p=m\vec v=\frac{h}{\nu}\vec n}.$
\end_inset


\end_layout

\begin_layout Itemize
求物质波的波长
\end_layout

\begin_deeper
\begin_layout Itemize
不考虑相对论效应
\begin_inset Formula $p=m_{0}v$
\end_inset


\end_layout

\begin_layout Itemize
考虑相对论效应
\begin_inset Formula $E=E_{0}+E_{k},E=mc^{2}$
\end_inset

, 当
\begin_inset Formula $E_{0}\sim E_{k}$
\end_inset

的时候.
 
\end_layout

\begin_layout Itemize
考虑
\begin_inset Formula $p^{2}c^{2}+E_{0}^{2}=E^{2},p^{2}c^{2}=E^{2}-E_{0}^{2}=(E-E_{0})(E+E_{0})=eU(eU+2m_{0}c^{2}).$
\end_inset


\end_layout

\begin_layout Itemize
极端相对论: 
\begin_inset Formula $eU^{2}=p^{2}c^{2},p=\frac{eU}{c},\lambda=\frac{hc}{eU}.$
\end_inset


\end_layout

\end_deeper
\begin_layout Standard
4.
 不确定性关系
\end_layout

\begin_layout Itemize
叙述: 
\begin_inset Formula $\Delta x\Delta p_{x}\geq\frac{\bar{h}}{2},\Delta x=\frac{\bar{h}}{2\Delta p_{x}}=\frac{h}{4\pi\Delta p_{x}}.$
\end_inset


\end_layout

